%h1
  - title(true)
- if @notifications.prev?
  = link_to("First", project_stack_path(@project, @stack, :page => 1))
  = link_to("Prev -", project_stack_path(@project, @stack, :page => @notifications.prev.number))
==Page #{@notifications.number}/#{@notifications.number_of_pages}
- if @notifications.next?
  = link_to("- Next", project_stack_path(@project, @stack, :page => @notifications.next.number))
  = link_to("Last", project_stack_path(@project, @stack, :page => @notifications.number_of_pages))

%div{ :class => "stack" }
  %h3
    Project
  %dl
    %dt
      Name
    %dd
      = @project.name
    %dt
      Identifier
    %dd
      = @notifications.first.stack.identifier
    %dt
      Amount
    %dd
      = @notification.stack.notifications_count
    %dt
      Category
    %dd
      = @notification.stack.category
    %dt
      Status
    %dd
      = h @notification.stack.status
      = h " (#{@notification.stack.username})" if @notification.stack.username
    %dt
      Updated at
    %dd
      = @notification.stack.updated_at.to_s(:short)
    %dt
      Last occured at
    %dd
      = h @notification.stack.last_occurred_at.to_s(:short)
    - if current_user && @notification.stack.can_change_status?(current_user)
      %dt
        Action
      %dd
        = render :partial => "processing_actions", :locals => { :stack => @notification.stack }
= render :partial => "section", :collection => @sections
= render :partial => "backtrace", :object => @backtrace if @backtrace
