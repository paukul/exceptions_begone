%tr{ :class => (h stack.status) }
  %td{ :title => (h stack.identifier) }
    = link_to "#{h stack.identifier}", project_stack_path(@project, stack)
  %td
    = h stack.last_occurred_at >= 1.day.ago ? stack.notifications.count(:created_at => {"$gt" => 1.day.ago}) : 0
  %td
    = h stack.notifications.count
  %td
    = h stack.category
  %td
    = h stack.status
    = h " (#{stack.username})" if stack.username
  %td
    = h stack.updated_at.to_s(:short)
  %td
    = h stack.last_occurred_at.to_s(:short)
  %td{ :class => "action" }
    = render :partial => "processing_actions", :locals => { :stack => stack }