!!! 5
%html
  %head
    %title
      = title
    %meta{ :charset => "UTF-8" }
    %link{ :media => "all", :rel => "stylesheet", :type => "text/css", :href => "/stylesheets/common.css" }
    - if @project && @project.id.present?
      %link{ :rel => "alternate", :type => "application/atom+xml", :href => project_stacks_path(@project) }

  %body
    = render "/layouts/flash"
    %header
      %a{ :href => projects_path, :title => "There is no Exception, there is only Zuul." }
        Exceptions <span>Begone</span>
    %nav
      %ul
        %nav
          %ul
            %li
              %a{ :href => projects_path }
                Projects
            - if current_user
              %li
                %a{ :href => logout_path }
                  Logout
            - else
              %li
                %a{ :href => new_user_session_path }
                  Login
              / %li
              /   %a{ :href => new_user_path }
              /     Signup
    %section
      = yield